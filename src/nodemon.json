{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/",
    "dist/",
    "coverage/"
  ],
  "watch": [
    "application/",
    "parser/",
    "schema/",
    "worker/",
    "index.ts"
  ],
  "execMap": {
    "ts": "node --trace-deprecation --no-node-snapshot -r dotenv/config -r ts-node/register"
  },
  "ext": "js,json,ts"
}